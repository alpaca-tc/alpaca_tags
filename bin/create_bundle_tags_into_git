#!/bin/sh

git_root_dir=`git rev-parse --show-toplevel`

while [ "$1" != "" ]; do
    case $1 in
    -ctags | --ctags_path ) shift
        ctags_path=$1
        ;;
    -args | --ctags_args )  shift
        ctags_args=$1
        ;;
    esac
    shift
done

if [ -d "${git_root_dir}" ]; then
  cd ${git_root_dir}
  bundle show --paths | xargs ${ctags_path} ${ctags_args} -R -f ${git_root_dir}/.git/gem.tags
fi
